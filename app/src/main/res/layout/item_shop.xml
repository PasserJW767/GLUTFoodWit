<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@color/edit_bgColorSelector"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_shopicon"
        android:layout_width="110dp"
        android:layout_height="89dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_shopname"
            android:layout_marginTop="20dp"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:text=""/>

        <LinearLayout
            android:id="@+id/ll_shopdetail"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_star"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/xing"/>

            <TextView
                android:id="@+id/tv_starsize"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"/>


            <TextView
                android:id="@+id/tv_monthlysales"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="月售"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_averageprice"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="人均:"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>