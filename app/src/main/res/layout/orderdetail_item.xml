<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/recommend_allBackground"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="383dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:background="@drawable/recommend_iconsbackground">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/recommend_iconsbackground">

            <ImageView
                android:id="@+id/orderdetail_commodityImg"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shopdetail_head"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shopid"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/orderdetail_commodityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重庆麻辣烫"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/orderdetail_commodityCount"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="×100"/>

                <TextView
                    android:id="@+id/orderdetail_commodityPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:textSize="20sp"
                    android:text="￥666"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>