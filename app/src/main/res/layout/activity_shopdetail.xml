<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_700">

    <!-- 顶部图片背景 -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_head_icon"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shopdetail_backgrounddetail"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_back"/>

            <ImageView
                android:id="@+id/select"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="285dp"
                android:src="@drawable/collect_unselect"/>

            <ImageView
                android:id="@+id/shopCart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/white_cart"/>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/iv_cart"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="-2dp"
                android:gravity="center"
                android:background="@drawable/shape_oval_red"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 商家的信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/shopdetail_background"
        android:orientation="vertical">

        <!-- 商家名称 + 商家头像 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_shopname"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="老牌蒋记烧烤城"
                android:textColor="@color/black"
                android:textSize="30sp"/>

            <ImageView
                android:id="@+id/iv_shop_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/shopdetail_head"/>

        </LinearLayout>

        <!-- 星星评分 + 月售 -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="-35dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/xing"/>

            <TextView
                android:id="@+id/tv_star_size"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="4.8"
                android:textSize="10sp"
                android:textColor="@color/shopDetail_fontColor"/>

            <TextView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:text="月售"
                android:textSize="10sp"
                android:gravity="center|left"
                android:textColor="@color/my_fontColor"/>

            <TextView
                android:id="@+id/tv_monthly_sales"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="2468"
                android:textSize="10sp"
                android:gravity="center|left"
                android:textColor="@color/my_fontColor"/>

        </LinearLayout>


        <!-- 带颜色的字们 -->
        <LinearLayout
            android:layout_height="15dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="满15得赠品"
                android:textSize="10dp"
                android:textColor="@color/shopDetail_fontColorRed"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/shopdetail_fontbackground"/>

            <TextView
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="20减2"
                android:textSize="10dp"
                android:textColor="@color/shopDetail_fontColorRed"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/shopdetail_fontbackground"/>

            <TextView
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="首单减5"
                android:textSize="10dp"
                android:textColor="@color/shopDetail_fontColorRed"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/shopdetail_fontbackground"/>

        </LinearLayout>

        <!-- 公告 -->
        <LinearLayout
            android:layout_height="40dp"
            android:layout_width="wrap_content">

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginLeft="15dp"
                android:text="公告："/>

            <TextView
                android:id="@+id/tv_shop_describe"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="阿里巴巴爸爸爸爸爸爸爸爸爸爸阿ss巴巴巴爸爸阿坝阿巴阿巴啊啊啊啊啊啊啊啊啊啊啊"/>

        </LinearLayout>

    </LinearLayout>

    <!-- 点菜/评价 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/shopdetail_background"
        android:orientation="vertical">

        <!-- 点菜或评价的按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/shopdetail_order"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:text="点菜"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/shopdetail_evaluate"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="评价"
                android:textSize="20dp"
                android:gravity="center|right"
                android:textColor="@color/register_title_shadow"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="15dp"
                android:text="2901"
                android:textSize="13dp"
                android:textColor="@color/register_title_shadow"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>


        <!-- 点菜或评价下方线的显示 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/order_underline"
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/shopdetail_choose"/>


            <TextView
                android:id="@+id/order_evaluate"
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:background="@color/white"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="-30dp"
        android:background="@drawable/shopdetail_background">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv1"
            android:layout_width="80dp"
            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ddd"
            />

        <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

            <include layout="@layout/view_stick_head"/>
        </FrameLayout>

    </LinearLayout>


</LinearLayout>