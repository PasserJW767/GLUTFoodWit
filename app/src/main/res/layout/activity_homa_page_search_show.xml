<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_all">
    <!-- 状态栏过渡 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/MainBackground"/>

    <include layout="@layout/title_font" android:id="@+id/ll_title"/>

    <include layout="@layout/select" android:id="@+id/ll_search"/>
    <LinearLayout
        android:id="@+id/ll_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/canteen_acticity_background">

        <LinearLayout
            android:background="@color/thegrey"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <LinearLayout
                android:id="@+id/ll_order1"
                android:layout_marginTop="3dp"
                android:background="@drawable/white_background"
                android:layout_marginLeft="16dp"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="按评分"
                    android:textSize="14sp"/>
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/xiangxia"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_order2"
                android:layout_marginTop="3dp"
                android:background="@drawable/white_background"
                android:layout_marginLeft="60dp"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="按销量"
                    android:textSize="14sp"/>
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/xiangxia"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_order3"
                android:layout_marginTop="3dp"
                android:background="@drawable/white_background"
                android:layout_marginLeft="60dp"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="按人均"
                    android:textSize="14sp"/>
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/xiangxia"/>
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/lv_searchlistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>
</LinearLayout>