<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/recommend_allBackground">

    <!-- 状态栏过渡 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/MainBackground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 返回按钮 -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/orderdetail_back"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/orderdetail_orderState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="525dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/orderdetail_shopId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重庆麻辣烫(麻辣拌)>"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/orderdetail_shopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"/>

        <ListView
            android:id="@+id/lv_listview"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="505dp">


        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">



        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="合计：￥"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/orderdetail_sumPrice"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:gravity="center|left"
            android:textColor="@color/recommend_iconBackgroundF"/>

        <TextView
            android:id="@+id/btn_orderAgain"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再来一单"
            android:visibility="gone"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_selector"/>

        <TextView
            android:id="@+id/btn_goToPay"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去支付"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:background="@drawable/btn_selector"/>


        <TextView
            android:id="@+id/btn_useComplete"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已收到餐"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:background="@drawable/btn_selector"/>

        <TextView
            android:id="@+id/btn_evaluate"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去评分"
            android:visibility="gone"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_selector"/>


        <TextView
            android:id="@+id/btn_backMoney"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款"
            android:visibility="gone"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_selector"/>

    </LinearLayout>





</LinearLayout>