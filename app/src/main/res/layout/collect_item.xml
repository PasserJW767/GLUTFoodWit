<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/recommend_allBackground"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="383dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:background="@drawable/recommend_iconsbackground">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/recommend_iconsbackground">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/shopdetail_head"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shopid"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/shopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重庆麻辣烫（麻辣拌）"
                android:layout_marginTop="5dp"
                android:textSize="22sp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <ImageView
                    android:id="@+id/xing"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/xing"/>

                <TextView
                    android:id="@+id/shopStar"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="4.8"
                    android:gravity="center|left"
                    android:textColor="@color/btn_pressColor"
                    android:textSize="18sp"/>


                <TextView
                    android:id="@+id/shopSales"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="月售：1587"
                    android:gravity="center|left"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="平均消费："
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/shopAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="￥666"
                    android:textColor="#fd3535"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>